{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "rootDir": "./static/ts",
    "outDir": "./static/js",
    "sourceMap": true,
    "removeComments": false,
    "newLine": "lf"
  },
  "include": ["static/ts/**/*.ts"]
}
